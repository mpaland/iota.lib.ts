{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "../dist",
    "rootDir": "."
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
